{
  "name": "flux-web-auth-frontend",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "yarn build:proto && yarn build:svelte",
    "build:svelte": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "prepare": "svelte-kit sync",
    "test": "playwright test",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. .",
    "build:proto": "mkdir -p ./proto && npx protoc --ts_out ./proto --proto_path ../proto ../proto/*.proto",
    "clean:proto": "rm ./proto/*"
  },
  "devDependencies": {
    "@playwright/test": "^1.21.0",
    "@poppanator/sveltekit-svg": "^0.3.2",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@types/cookie": "^0.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.10.6",
    "tailwindcss": "^3.0.24",
    "tslib": "^2.3.1",
    "typescript": "~4.6.2"
  },
  "type": "module",
  "dependencies": {
    "@grpc/grpc-js": "^1.6.7",
    "@protobuf-ts/grpc-transport": "^2.6.0",
    "@protobuf-ts/grpcweb-transport": "^2.6.0",
    "@protobuf-ts/plugin": "^2.6.0",
    "cookie": "^0.5.0",
    "eva-icons": "^1.1.3",
    "jsonwebtoken": "^8.5.1"
  },
  "packageManager": "yarn@3.2.1"
}
