{% extends "base/global" %}

{% block title %}Sign out{% endblock %}

{% block content %}
<div class="modal-header p-5 border-bottom-0 d-block text-success">
  <h2 class="fw-bold mb-0">
    <i class="fas fa-circle-check"></i>
    Signed out!
  </h2>
  <div>You have successfully signed out</div>
  {% if next_url %}
    <a href="{{ next_url }}" class="btn btn-success mt-3">Continue</a>
  {% endif %}
</div>
{% endblock %}
